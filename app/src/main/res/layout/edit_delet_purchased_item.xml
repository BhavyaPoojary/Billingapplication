<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dimen_10"
        android:layout_gravity="end"
        android:gravity="end">


        <TextView
            android:id="@+id/txtBillNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/dimen_17"
            android:gravity="end"/>

        <TextView
            android:id="@+id/tv_Bill_No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill No :"
            android:textSize="@dimen/dimen_17"
            android:gravity="end"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dimen_10">
        <TextView
            android:id="@+id/txtItem_Name"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/sp_20"
            android:textColor="@color/colorPrimary"/>
        <EditText
            android:id="@+id/etItem_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/colorPrimary"
            android:enabled="false"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dimen_10">
        <TextView
            android:id="@+id/txtBuyingPrice"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/sp_20"
            android:textColor="@color/colorPrimary"/>
        <EditText
            android:id="@+id/et_BPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_20"
            android:inputType="number"
            android:textColor="@color/colorPrimary"
            android:enabled="false"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dimen_10"
        android:id="@+id/llSales">
        <TextView
            android:id="@+id/txt_sales"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/sp_20"

            android:textColor="@color/colorPrimary"/>
        <EditText
            android:id="@+id/et_SPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/colorPrimary"
            android:enabled="false"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dimen_10">
        <TextView
            android:id="@+id/txtQty"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/sp_20"
            android:textColor="@color/colorPrimary"/>
        <EditText
            android:id="@+id/et_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/colorPrimary"
            android:enabled="false"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dimen_10">
        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/sp_20"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/colorPrimary"
            android:enabled="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:weightSum="4"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_10">

        <Button
            android:id="@+id/btDelete"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/dimen_17"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            android:layout_margin="@dimen/dimen_3"/>

        <Button
            android:id="@+id/btEdit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/dimen_17"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            android:layout_margin="@dimen/dimen_3"/>

        <Button
            android:id="@+id/btAdd"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Add"
            android:textSize="@dimen/dimen_17"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            android:layout_margin="@dimen/dimen_3"
            android:visibility="visible"/>

        <Button
            android:id="@+id/btCancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/dimen_17"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            android:layout_margin="@dimen/dimen_3"
            />


    </LinearLayout>




</LinearLayout>