<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--mmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmm-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <AutoCompleteTextView
            android:id="@+id/etBillNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Bill Number"
            android:imeOptions="flagNoExtractUi"
            android:textSize="@dimen/dimen_20"
            android:textColor="@color/light_black"
            android:singleLine="true"
            android:completionThreshold="1"
            android:inputType="number"
            android:layout_marginTop="@dimen/dimen_5"/>
        <AutoCompleteTextView
            android:id="@+id/autoShopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Shop Name"
            android:textSize="@dimen/dimen_20"
            android:imeOptions="flagNoExtractUi"
            android:textColor="@color/light_black"
            android:singleLine="true"
            android:completionThreshold="1"
            android:inputType="text"
            android:layout_marginTop="@dimen/dimen_5"/>



    </LinearLayout>

    <!--mmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmm-->
    </android.support.v7.widget.CardView>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtInBillDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Bill Date"
        android:layout_marginTop="@dimen/dimen_5"
        android:visibility="gone">

        <EditText
            android:id="@+id/etBillDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_20"
            android:textColor="@color/light_black"
            android:inputType="number"
            android:visibility="gone"
            />

    </android.support.design.widget.TextInputLayout>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llFromTo">

        <EditText
            android:id="@+id/et_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_20"
            android:layout_weight="1"
            android:textColor="@color/light_black"
            android:inputType="number"
            android:hint="From :"
            />

        <EditText
            android:id="@+id/et_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_20"
            android:textColor="@color/light_black"
            android:inputType="number"
            android:layout_weight="1"
            android:hint="To"/>




    </LinearLayout>

</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llFromToNew"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_from_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_20"
            android:layout_weight="1"
            android:textColor="@color/light_black"
            android:inputType="number"
            android:hint="From :"
            android:imeOptions="flagNoExtractUi"
            />

        <EditText
            android:id="@+id/et_to_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_20"
            android:textColor="@color/light_black"
            android:inputType="number"
            android:layout_weight="1"
            android:imeOptions="flagNoExtractUi"
            android:hint="To"/>




    </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btClearDate"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:textSize="20sp"
        android:text="Clear"
        android:textColor="@color/white"
        android:background="#f44336"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_10"/>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:animateLayoutChanges="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_10"
        android:background="#b4ddef">
        <TextView
            android:text="BillNo"
            android:id="@+id/tv_shopName"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/tv_billNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ShopName"
            android:textColor="@color/colorPrimary"
            android:textSize="17dp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/tv_grandTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GrandTotal"
            android:textAlignment="center"
            android:textSize="17dp"
            android:textColor="@color/colorPrimary"
            tools:ignore="RtlCompat" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PaidAmount"
            android:textSize="17dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_paidAmount"
            tools:ignore="RtlCompat"
            android:textAlignment="center"/>


    </LinearLayout>

    <ListView
        android:id="@+id/lvBillDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:background="@color/white"
        android:scrollbars="horizontal">


    </ListView>

</LinearLayout>