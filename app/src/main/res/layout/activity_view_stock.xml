<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="billing.amits.androbiller.view_stock"
    android:padding="5dp">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/header"
                android:animateLayoutChanges="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Item"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/white"/>






                <TextView
                    android:id="@+id/brand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Brand"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/white"
                    android:gravity="end"
                    android:visibility="gone"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/stock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Stock"
                    android:textAlignment="textEnd"
                    android:textDirection="anyRtl"
                    android:gravity="end"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/white" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Rate"
                    android:textAlignment="textEnd"
                    android:textDirection="anyRtl"
                    android:gravity="end"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/white"/>


            </LinearLayout>
            <ListView
                android:layout_below="@+id/header"
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </ListView>
            <RelativeLayout
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#b4ddef">
                <TextView
                    android:id="@+id/txtTotalRate"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Rate"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/txtTotalRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:layout_marginLeft="@dimen/dimen_3"
                    android:id="@+id/tv_TotalRate"/>

                <TextView
                    android:id="@+id/txtTotalQty"
                    android:layout_toLeftOf="@+id/tv_TotalQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Qty:"/>
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_TotalQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen_3"
                    android:layout_marginLeft="@dimen/dimen_3"/>

            </RelativeLayout>



        </RelativeLayout>

    </android.support.v7.widget.CardView>





</RelativeLayout>
